<html><head></head><body>{% extends "layouts/publicLayout.njk" %}

{% block content %}
  
  <div class="home-container1">
      
      <!-- Sección de Hero y Características -->
      {% include "partials/heroAndFeatures.njk" %}

      <!-- Sección de Prácticas y Razones para Elegirnos -->
      {% include "partials/practicesAndWhyChooseUs.njk" %}

      <!-- Sección de Conoce a Nuestros Médicos -->
      {% include "partials/meetOurDoctors.njk" %}

  

      <!-- Sección de Agendar Cita -->
      {% include "partials/scheduleAppointment.njk" %}

      <!-- Sección de Características -->
      {% include "partials/featuresSection.njk" %}

      <!-- Sección de Últimas Noticias -->
      {% include "partials/latestNews.njk" %}

  </div>
{% endblock %}



<header class="header">
    <nav class="navbar">
        <button class="hamburger" id="hamburgerBtn">☰</button>
        <ul class="navbar__links" id="navbarLinks">
            {# Enlaces de rutas públicas #}
            {% for route in publicRoutes %}
                <li class="navbar__item">
                    <a href="{{ route.path }}" class="navbar__link {% if route.subRoutes %}has-submenu{% endif %}">{{ route.title }}</a>
                    {% if route.subRoutes %}
                        <div class="submenuContainer"> <!-- Contenedor para el submenú -->
                            <ul class="submenuNav {% if route.subRoutes|length > 2 %}horizontal{% endif %}"> <!-- Clase para el submenú -->
                                {% for section in route.subRoutes %}
                                    <li class="submenu__item">
                                        <a href="{{ route.path }}#{{ section.id }}" class="submenuLink">{{ section.title }}</a> {# Enlace a la sección específica #}
                                    </li>
                                {% endfor %}
                            </ul>
                        </div>
                    {% endif %}
                </li>
            {% endfor %}
            {# Enlaces de rutas privadas (solo si el usuario está autenticado) #}
            {% if isAuthenticated %}
                {% for route in privateRoutes %}
                    <li class="navbar__item">
                        <a href="{{ route.path }}" class="navbar__link {% if route.subRoutes %}has-submenu{% endif %}">{{ route.title }}</a>
                        {% if route.subRoutes %}
                            <div class="submenuContainer"> <!-- Contenedor para el submenú -->
                                <ul class="submenuNav {% if route.subRoutes|length > 2 %}horizontal{% endif %}"> <!-- Clase para el submenú -->
                                    {% for subRoute in route.subRoutes %}
                                        <li class="submenu__item">
                                            <a href="{{ subRoute.path }}">{{ subRoute.title }}</a>
                                        </li>
                                    {% endfor %}
                                </ul>
                            </div>
                        {% endif %}
                    </li>
                {% endfor %}
            {% endif %}
        </ul>
    </nav>
</header>
.header {
  position: fixed;
  padding: 0.1px;
  width: 100%;
  background-color: #001f3f; 
  position: fixed;
  z-index: 1500;
}

.navbar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #001f3f; 
  padding: 15px 5px;
}
.submenuContainer {
  visibility: hidden; 
  opacity: 0; 
  transition: visibility 0s, opacity 0.5s ease; 
}


.navbar__links li:hover .submenuContainer {
  visibility: visible; 
  opacity: 1; 
}

.submenuNav {
  border-radius: 5px;
  display: flex; 

  white-space: nowrap; 

  position: absolute; 
  padding: 0;
  background-color: #010107; 
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.3); 
  z-index: 1000; 
}


.navbar__links li:hover .submenuNav {
  flex-direction: column; 
}


.navbar__links li:hover .submenuNav.horizontal {
  flex-direction: row; 
  align-items: center; 
  justify-content: center; 
  gap: 10px; 
  list-style-type: none;
}


.submenuNav li {
  margin: 0 10px; 
  padding: 0; 
}

.submenuNav li a {
  padding: 10px 15px; 
  color: white; 
  text-decoration: none; 
}

.submenuNav li a:hover {
  background-color: #555; 
  border-radius: 5px; 
}
.navbar__links {
  display: flex;
  list-style-type: none;
  margin: 0;
}

.navbar__links li {
  margin: 0;
}

.navbar__links li a {
  color: white;
  text-decoration: none;
  padding: 14px 20px;
  display: block;
}

.navbar__links li a:hover {
  background-color: #555;
  border-radius: 5px;
}

@media (max-width: 768px) {
  .navbar__links {
    display: none; 
    flex-direction: column; 
    width: 100%; 
    background-color: #001f3f; 
    position: absolute; 
    top: 60px; 
    left: 0;
    z-index: 1500; 
  }

  .navbar__links.active {
    display: flex; 
  }

  .submenuNav {
    display: none; 
    flex-direction: column; 
    padding-left: 20px; 
  }

  .submenuNav.active {
    display: flex; 
  }
}
</body></html>