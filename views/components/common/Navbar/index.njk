<header class="header">
    <nav class="navbar">
        <button class="hamburger" id="hamburgerBtn">☰</button>
        <ul class="navbar__links">
            {# Enlaces de rutas públicas #}
            {% for route in publicRoutes %}
                <li>
                    <a href="{{ route.path }}">{{ route.title }}</a>
                    {% if route.subRoutes %}
                        <ul class="submenuNav">  <!-- Clase para el submenú -->
                            {% for subRoute in route.subRoutes %}
                                <li><a href="{{ subRoute.path }}">{{ subRoute.title }}</a></li>
                            {% endfor %}
                        </ul>
                    {% endif %}
                </li>
            {% endfor %}
            {# Enlaces de rutas privadas (solo si el usuario está autenticado) #}
            {% if isAuthenticated %}
                {% for route in privateRoutes %}
                    <li>
                        <a href="{{ route.path }}">{{ route.title }}</a>
                        {% if route.subRoutes %}
                            <ul class="submenu">  <!-- Clase para el submenú -->
                                {% for subRoute in route.subRoutes %}
                                    <li><a href="{{ subRoute.path }}">{{ subRoute.title }}</a></li>
                                {% endfor %}
                            </ul>
                        {% endif %}
                    </li>
                {% endfor %}
            {% endif %}
        </ul>
    </nav>
</header>
