<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Secciones con Nunjucks</title>
    <link rel="stylesheet" href="styles.css"> <!-- Opcional: tu archivo CSS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/nunjucks/3.2.3/nunjucks.min.js"></script>
</head>

<body>

    <div id="sections-container"></div>

    <script>
        // Datos de ejemplo
        const sectionsData = [
            {
                title: "Sección 1",
                content: "Contenido de la sección 1.",
                image: "https://via.placeholder.com/150"
            },
            {
                title: "Sección 2",
                content: "Contenido de la sección 2.",
                image: "https://via.placeholder.com/150"
            },
            {
                title: "Sección 3",
                content: "Contenido de la sección 3."
            }
        ];

        // Configurar Nunjucks
        nunjucks.configure({ autoescape: true });

        // Cargar la plantilla y renderizar
        async function renderSections() {
            const template = await fetch('section.njk').then(res => res.text());

            const container = document.getElementById('sections-container');
            sectionsData.forEach(section => {
                const rendered = nunjucks.renderString(template, section);
                container.innerHTML += rendered;
            });
        }

        // Llamar a la función para renderizar las secciones
        renderSections();
    </script>

</body>

</html>