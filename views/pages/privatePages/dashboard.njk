<!-- Plantilla hija: views/pages/privatePages/dashboard.njk -->
{% extends "layouts/privateLayout.njk" %}

{% block title %}Dashboard{% endblock %}

{% block content %}
<div class="dashboard-container">

  <!-- Título principal -->
  <section class="dashboard-section">
    <h1 class="main-heading">{{ title }}</h1>
    <p class="subheading">Bienvenido al dashboard privado.</p>
  </section>

  <!-- Sección de Cards -->
  <section id="cards-container" class="dashboard-cards-container">
    {% set contador = 1 %}
    {% for item in items %}
    <section class="dashboard-card">
      <img src="/path/to/img{{ contador }}.jpg" alt="Image {{ contador }}" class="card-img">
      <div class="card-content">
        <h2 class="card-title">{{ item.title }}</h2>
        <p class="card-description">Descripción para {{ item.title }}.</p>
        <a href="{{ item.link }}" class="option-link">Ir a {{ item.title }}</a>
      </div>
    </section>
    {% set contador = contador + 1 %}
    {% endfor %}
  </section>

</div>
{% endblock %}