{% extends "layouts/privateLayout.njk" %}

{% block title %}{{ title }}{% endblock %}

{% block content %}
<div class="dashboard-container">
  <section class="dashboard-section" id="items-container">
    <!-- Aquí se generarán dinámicamente los elementos -->
  </section>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script type="module">
  import { renderCharts } from './js/chart/charts.js';  // Asegúrate de que la ruta sea correcta

  document.addEventListener("DOMContentLoaded", () => {
    const items = JSON.parse('{{ items | safe }}');  // Convertir los items a un objeto JavaScript
    renderCharts(items);  // Llamar a la función que genera los gráficos
  });
</script>

{% endblock %}
