<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="styles.css">
    <title>Sidebar con Selección</title>
</head>
<body>
    <button id="hamburgerBtn">☰</button>
    <div id="layoutContainer">
        <div id="sidebar">
            <ul>
                <li>
                    <a href="#" class="menu-item" data-content="contentPage1">Página 1</a>
                    <ul>
                        <li><a href="#" class="menu-item" data-content="contentSubPage1">Subpágina 1</a></li>
                    </ul>
                </li>
                <li>
                    <a href="#" class="menu-item" data-content="contentPage2">Página 2</a>
                </li>
            </ul>
        </div>
        <main>
            {% block content %}
                <h2>Página inicial</h2>
                <p>Este es el contenido por defecto.</p>
            {% endblock %}
        </main>
    </div>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const mainContent = document.querySelector('main'); // Seleccionar el main
            console.log(mainContent); // Verifica que no sea null

            // Función para cargar contenido basado en el ID
            function loadContent(contentId) {
                let contentHtml = '';

                switch (contentId) {
                    case 'contentPage1':
                        contentHtml = '<h2>Contenido de Página 1</h2><p>Este es el contenido de la primera página.</p>';
                        break;
                    case 'contentSubPage1':
                        contentHtml = '<h2>Contenido de Subpágina 1</h2><p>Este es el contenido de la subpágina 1.</p>';
                        break;
                    case 'contentPage2':
                        contentHtml = '<h2>Contenido de Página 2</h2><p>Este es el contenido de la segunda página.</p>';
                        break;
                    default:
                        contentHtml = '<h2>Contenido no encontrado</h2>';
                }

                // Actualizar el bloque de contenido
                mainContent.innerHTML = contentHtml; // Usa el mainContent directamente
            }

            // Asignar evento de clic a los elementos del menú
            const menuItems = document.querySelectorAll('.menu-item');
            menuItems.forEach(item => {
                item.addEventListener('click', (event) => {
                    event.preventDefault(); // Evitar el comportamiento por defecto
                    const contentId = item.getAttribute('data-content'); // Obtener el ID del contenido
                    loadContent(contentId); // Cargar el contenido correspondiente
                });
            });
        });
    </script>
</body>
</html>
