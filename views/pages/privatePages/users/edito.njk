<form id="userUpdateForm" data-user-id="{{ user._id }}">
    <label for="name">Nombre:</label>
    <input type="text" id="name" name="name" value="{{ user.name }}" required>

    <label for="surnames">Apellidos:</label>
    <input type="text" id="surnames" name="surnames" value="{{ user.surnames }}" required>

    <label for="email">Email:</label>
    <input type="email" id="email" name="email" value="{{ user.email }}" required>

    <label for="gender">GÃ©nero:</label>
    <select id="gender" name="gender">
        <option value="male" {{ user.gender === 'male' ? 'selected' : '' }}>Masculino</option>
        <option value="female" {{ user.gender === 'female' ? 'selected' : '' }}>Femenino</option>
    </select>

    <fieldset>
        <legend>Roles:</legend>
        {% for role in allRoles %}
            <label>
                <input type="checkbox" name="roles" value="{{ role._id }}" {% if assignedRoleIds.includes(role._id.toString()) %}checked{% endif %}>
                {{ role.name }}
            </label>
        {% endfor %}
    </fieldset>

    <button type="submit">Actualizar Usuario</button>
</form>
