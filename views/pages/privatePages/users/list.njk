<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de Usuarios</title>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
        }
        th, td {
            padding: 10px;
            border: 1px solid #ddd;
        }
    </style>
</head>
<body>
    <h1>Lista de Usuarios</h1>
    <div id="userTableContainer">
        <table>
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Correo</th>
                    <th>Teléfono</th>
                </tr>
            </thead>
            <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{ user.name }}</td>
                        <td>{{ user.email }}</td>
                        <td>{{ user.phone }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    <script type="module">
        import { fetchUsers } from './js/apiUserManager.js';

        document.addEventListener('DOMContentLoaded', function () {
            fetchUsers(renderUserTable);
        });

        function renderUserTable(users) {
            let tableHtml = `
                <table>
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Correo</th>
                            <th>Teléfono</th>
                        </tr>
                    </thead>
                    <tbody>
            `;

            users.forEach(user => {
                tableHtml += `
                    <tr>
                        <td>${user.name}</td>
                        <td>${user.email}</td>
                        <td>${user.phone}</td>
                    </tr>
                `;
            });

            tableHtml += '</tbody></table>';
            document.getElementById('userTableContainer').innerHTML = tableHtml;
        }
    </script>
</body>
</html>
