{% extends "layouts/publicLayout.njk" %}

{% block content %}
  <style>
    .container {
      margin-bottom: 20px;
    }
    .container ul {
      list-style-type: none;
      padding: 0;
    }
    .container li {
      margin: 5px 0;
    }
  </style>
  
  <div class="container" id="firstContainer">
    <h2>Primer Contenedor</h2>
    <!-- Este es el contenido original que se va a clonar -->
{% include
"pages/privatePages/specialty/verb/getAll.njk" %}
  </div>

  <div class="container" id="secondContainer">
    <h2>Segundo Contenedor</h2>
    <!-- Este es el segundo contenedor vacío donde clonaremos el contenido -->
  </div>

  <script>
    // Función para clonar el contenido del primer contenedor en el segundo
    function cloneSpecialties() {
      const firstContainer = document.getElementById('firstContainer');
      const secondContainer = document.getElementById('secondContainer');
      
      // Clonamos el contenido del primer contenedor
      const clonedContent = firstContainer.innerHTML;
      
      // Insertamos el contenido clonado en el segundo contenedor
      secondContainer.innerHTML = clonedContent;
    }
    
    // Llamamos a la función para clonar el contenido
    cloneSpecialties();
  </script>

{% endblock %}
