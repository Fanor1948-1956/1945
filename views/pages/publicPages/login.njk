{% extends "layouts/publicLayout.njk" %}

{% block content %}
    <style>
        .main {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 80vh;
        }

        h2 {
            text-align: center;
            color: white;
        }

        .error-message {
            color: red;
            margin-bottom: 15px;
            text-align: center;
        }

        label {
            margin: 2px;
            display: block;
            color: white;
        }

        input[type="email"],
        input[type="password"] {
            width: 100%;
            padding: 10px 0px;
            margin: 10px 0px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        button {
            width: 100%;
            position: relative;
            background-color: white;
            color: #161616;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px;
        }

        button:hover {
            background-color: #1616160;
            color: white !important;
            border: 1px solid white !important;
        }
    </style>
    <div class="main">
        <div class="form-container">
            <h2>Iniciar Sesión</h2>

            <form class="form-action" action="/auth/login" method="POST">
                <label for="email">Email:</label>
                <input type="email" id="email" name="email" required>
                
                <label for="password">Contraseña:</label>
                <input type="password" id="password" name="password" required>
                
                <!-- Mueve el bloque de error aquí -->
                {% if query.error %}
                    <div class="error-message">{{ query.error }}</div>
                {% endif %}
                
                <button type="submit">Iniciar Sesión</button>
            </form>
        </div>
    </div>
{% endblock %}
