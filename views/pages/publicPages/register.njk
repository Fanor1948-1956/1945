{% extends "layouts/publicLayout.njk" %}

{% block content %}
    <h1>Registro de Paciente</h1>

    <style>
        /* General Styles */
   
  .main {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            padding: 20px;
            box-sizing: border-box;
        }
        h1 {
            color: #333;
            text-align: center;
        }
         h2 {
            color: #333;
            text-align: center;
        }

        /* Form Container */
        .form-container {
            background-color: white;
            border-radius: 8px;
            box-shadow: 0 2px 10px rgba(4, 0, 48, 0.1);
            padding: 20px;
            margin: 20px auto;
            max-width: 400px;
        }

        /* Form Styles */
        form {
            display: flex;
            flex-direction: column;
        }

        label {
            margin-bottom: 5px;
            font-weight: bold;
        }

        input[type="text"],
        input[type="email"],
        input[type="password"],
        select {
            padding: 12px;
            border: 1px solid #ccc;
            border-radius: 4px;
            margin-bottom: 15px;
            font-size: 16px;
            transition: border-color 0.3s ease;
        }

        input[type="text"]:focus,
        input[type="email"]:focus,
        input[type="password"]:focus,
        select:focus {
            border-color: #007bff;
            outline: none;
        }

        /* Button Styles */
        .send {
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 4px;
            padding: 12px;
            font-size: 16px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .send:hover {
            background-color: #0056b3;
        }

        /* Table Container */
        .table-container {
            margin-top: 30px;
        }
.button-content{
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    padding:0px 100px;
    margin-top: 20px;
}
    
        /* No Permission Message */
        p {
            text-align: center;
            color: #ff0000;
        }
    </style>

    <div class="main">
        <div class="form-container">
            <h2>Registrarse</h2>
            <form action="/auth/register" method="POST">
                <label for="name">Nombre:</label>
                <input type="text" id="name" name="name" placeholder="Ingresa tu nombre" required />

                <label for="surnames">Apellidos:</label>
                <input type="text" id="surnames" name="surnames" placeholder="Ingresa tus apellidos" required />

                <label for="email">Email:</label>
                <input type="email" id="email" name="email" placeholder="Ingresa tu correo electrónico" required />

                <label for="password">Contraseña:</label>
                <input type="password" id="password" name="password" placeholder="Ingresa tu contraseña" required />

                <label for="gender">Género:</label>
                <select name="gender" id="gender" required>
                    <option value="">Seleccionar género</option>
                    <option value="masculino">Masculino</option>
                    <option value="femenino">Femenino</option>
                    <option value="otro">Otro</option>
                </select>
          <div class="button-content">
                <button class="send" type="submit">Registrar Paciente</button>
                                </div>
            </form>
        </div>
      </div>

    <hr />


{% endblock %}
