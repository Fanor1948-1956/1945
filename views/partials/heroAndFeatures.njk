<!-- Sección de características -->
<div
  id="features"
  class="home-features1"
>
  <div
    class="home-content11"
    id="features-list"
  ></div>
</div>

<div class="home-background"></div>

<script>
  // Cargar datos desde el mockup JSON
  const data = {
    heroSection: {
      title: 'Médicos generales experimentados que cuidan de ti',
      description:
        'Nos dedicamos a brindarte laadadasdds mejor atención médica posible.',
      buttonText: 'Reservar una cita',
      buttonIcon: '/Icons/calendar.svg',
      buttonAltText: 'calendar icon',
      image: '/News/doctor-image-1500w.png',
      imageAltText: 'doctor image',
    },
    featuresSection: [
      {
        title: 'Clínica Virtual',
        description: 'Consulta médica desde la comodidad de tu hogar.',
      },
      {
        title: 'Resultados Clínicos',
        description: 'Accede a los resultados de tus exámenes rápidamente.',
      },
    ],
  };

  // Función para renderizar la sección hero
  function renderHeroSection(data) {
    document.getElementById('hero-title').textContent = data.title;
    document.getElementById('hero-description').textContent = data.description;
    document.getElementById('hero-button-text').textContent = data.buttonText;
    document.getElementById('hero-button-icon').src = data.buttonIcon;
    document.getElementById('hero-button-icon').alt = data.buttonAltText;
    document.getElementById('hero-image').src = data.image;
    document.getElementById('hero-image').alt = data.imageAltText;
  }

  // Función para renderizar las características
  function renderFeaturesSection(features) {
    const featuresContainer = document.getElementById('features-list');
    featuresContainer.innerHTML = ''; // Limpiar contenido anterior
    features.forEach((feature) => {
      const featureElement = document.createElement('div');
      featureElement.className = 'feature';
      featureElement.innerHTML = `
      <h3 class="feature-title">${feature.title}</h3>
      <p class="feature-description">${feature.description}</p>
    `;
      featuresContainer.appendChild(featureElement);
    });
  }

  // Llamada para renderizar ambas secciones
  renderHeroSection(data.heroSection);
  renderFeaturesSection(data.featuresSection);
</script>
